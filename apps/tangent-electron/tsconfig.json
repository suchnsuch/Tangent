{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"outDir": "__build",
		"sourceMap": true,
		"baseUrl": "src",
		"paths": {
			"svelte/*": ["../node_modules/svelte/src/runtime/*"]
		},
		"target": "ES2022",
		"lib": ["ESNext", "DOM"],
		"types": ["svelte"],
		"moduleResolution": "Node",
		"allowJs": true,
		"esModuleInterop": true,
		"strict": false,
		"verbatimModuleSyntax": true
	},
	"exclude": [ "__build", "node_modules", "out" ]
}
